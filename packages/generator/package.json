{
  "name": "@wesflo/generator",
  "version": "0.0.5",
  "description": "Generates mock json files from swagger yml",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "wf-generator": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "npm run prebuild && tsc",
    "publish": "npm run build && npm publish --access=public",
    "build:local": "npm run build && npm pack",
    "dev": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage=false"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/electronicpartnerio/browser-mock.git"
  },
  "author": "Florian Wessner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/electronicpartnerio/browser-mock/issues"
  },
  "homepage": "https://github.com/electronicpartnerio/browser-mock#readme",
  "nodemonConfig": {
    "ignore": [
      "node_modules"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chance": "^1.1.12",
    "openapi3-ts": "^4.4.0",
    "promptly": "^3.2.0",
    "swagger-combine": "^1.4.0",
    "tslib": "^2.8.1",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/chance": "^1.1.6",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.3",
    "@types/promptly": "^3.0.5",
    "jest": "^29.7.0",
    "typescript": "^5.7.2"
  },
  "wfGenerator": {
    "swagger": "mock/swagger.yaml",
    "mappings": [
      "mock/mapping.yaml",
      "mock/overwrite.yaml"
    ],
    "target": "tmp/mocks"
  }
}
