{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es2022",
    "lib": ["es2022"],
    "declaration": true,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "noEmitOnError": false,
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "strict": false,
  },
  "exclude": ["node_modules"],
  "include": ["src"],
}
