{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "vitest/globals",
      "@types/chrome",
      "@lit/task"
    ],
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "importHelpers": true,
    "outDir": "out-tsc",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./src",
    "incremental": true,
    "skipLibCheck": true,
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "test/**/*.ts",
    "build",
    "dist",
    "out-tsc",
    "node_modules"
  ]
}